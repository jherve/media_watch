<main {MediaWatchWeb.LayoutView.main_css_attributes()}>
  <%= for level <- [:info, :error] do %>
    <p {MediaWatchWeb.LayoutView.flash_css_attributes(level)}
      phx-click="lv:clear-flash"
      phx-value-key={level}><%= live_flash(@flash, level) %></p>
  <% end %>

  <%= @inner_content %>
</main>
